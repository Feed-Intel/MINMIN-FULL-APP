{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["import"],
  "extends": ["eslint:recommended", "plugin:import/typescript", "prettier"],
  "ignorePatterns": ["dist", "node_modules"],
  "rules": {
    "import/order": ["error", {"alphabetize": {"order": "asc"}, "newlines-between": "always"}]
  }
}
